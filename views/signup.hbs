              },1000)
      }
            
          
        });
          
            
            let p1=document.getElementById('pass')
            let p2=document.getElementById('cpass')
            let btn=document.getElementById('btn')
            let p=document.getElementById('submit')
            let c=document.getElementById('cola')
            let pr=document.getElementById('prog')
            c.onclick=function(){
              pr.innerHTML='<div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>'
              setTimeout(()=>c.disabled=true,1)
            }
            btn.onclick=function(){
                if(p1.value!=p2.value)
                {
                    window.alert("Passwords don't match")
                }
                else if(p1.value==''){
                    window.alert("Enter a password")
                }
                else if(p1.value.length<6){
                    window.alert("Password must include at least 6 characters")
                }
                else{
                    p.innerHTML='<input type="submit" id="final" class="btn btn-warning" value="Submit">'
                    p2.disabled=true;
                    pr.innerHTML='<div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>'

                }
            }
            
